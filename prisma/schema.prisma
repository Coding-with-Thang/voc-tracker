generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id          String      @id @default(uuid()) @map("_id")
  clerkId     String      @unique
  firstName   String?
  lastName    String?
  username    String?
  voiceName   String?     @unique
  role        Role        @default(AGENT)
  surveys     Survey[]
  uploadJobs  UploadJob[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("users")
}

model Survey {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  comment String?
  AHT String
  voiceName String
  date DateTime
  CSAT Int

  @@unique([userId, comment, AHT, CSAT]) //Prevents duplicate surveys to be added into DB
}

model UploadJob {
  id          String   @id @default(uuid()) @map("_id")
  userId      String
  s3Key       String
  status      String   // QUEUED, PROCESSING, COMPLETED, FAILED
  progress    Int      @default(0)
  totalRows   Int
  error       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@map("upload_jobs")
}

enum Role {
  AGENT
  MANAGER
  OPERATIONS
}